<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>City-List</title>

    <link rel="stylesheet" href="../style.css" />

    <!-- Admin-LTE CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css"
    />

    <!-- Admin-LTE Script -->
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>

    <!-- Ionicons -->
    <link
      rel="stylesheet"
      href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css"
    />

    <!-- Google Font: Source Sans Pro -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback"
    />

    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />

    <!-- Bootstarp CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      .icon {
        font-size: 18px;
        margin: 0 5px;
      }
      .delete {
        color: rgb(245, 26, 26);
      }
    </style>
  </head>
  <body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
      <!-- Navbar -->
      <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"
              ><i class="fas fa-bars"></i
            ></a>
          </li>
          <li class="nav-item d-none d-sm-inline-block">
            <a href="/dashboard " class="nav-link">Home</a>
          </li>
        </ul>
      </nav>
      <!-- /.navbar -->

      <!-- Main Sidebar Container -->
      <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="/dashboard" class="brand-link">
          <img
            src="../logo.webp"
            alt="AdminLTE Logo"
            class="brand-image img-circle elevation-3"
            style="opacity: 0.8"
          />
          <span class="brand-text font-weight-light">AdminLTE 3</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
          <!-- Sidebar user panel (optional) -->
          <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
              <img
                src="../user.jpg"
                class="img-circle elevation-2"
                alt="User Image"
              />
            </div>
            <div class="info">
              <a href="#" class="d-block">Vinay Sakariya</a>
            </div>
          </div>

          <!-- Sidebar Menu -->
          <nav class="mt-2">
            <ul
              class="nav nav-pills nav-sidebar flex-column"
              data-widget="treeview"
              role="menu"
              data-accordion="false"
            >
              <li class="nav-item">
                <a href="/dashboard" class="nav-link">
                  <i class="nav-icon fas fa-tachometer-alt"></i>
                  <p>Dashboard</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/admin-list" class="nav-link">
                  <!-- <i class="nav-icon fas fa-th"></i> -->
                  <i class="nav-icon fas fa-solid fa-user"></i>
                  <p>Admin</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/city" class="nav-link">
                  <i class="nav-icon fas fa-solid fa-city"></i>
                  <p>City</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/logout" class="nav-link">
                  <i class="nav-icon fas fa-solid fa-power-off"></i>
                  <p>Logout</p>
                </a>
              </li>
            </ul>
          </nav>
          <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
      </aside>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="container-fluid">
          <div class="content-header">
            <div class="row">
              <div class="col-sm-6">
                <h1 class="m-0">City List</h1>
              </div>
              <!-- /.col -->
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item">
                    <button
                      class="btn btn-outline-success"
                      data-bs-toggle="modal"
                      data-bs-target="#exampleModal"
                    >
                      <i class="fa-solid fa-plus"></i>
                    </button>
                  </li>
                </ol>
              </div>
            </div>
            <!-- /.row -->
          </div>
          <!-- /.content-header -->
          <div class="row px-3">
            <div class="content-header">
              <div class="row">
                <div class="col-sm-12">
                  <div class="breadcrumb float-sm-right">
                    <input
                      type="text"
                      name="search"
                      class="form-control search"
                      placeholder="Search"
                      id="search-input"
                    />
                  </div>
                </div>
              </div>
              <!-- /.row -->
            </div>
            <!-- /.content-header -->
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Name</th>
                  <th scope="col">isActive</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                <% allCity.forEach(function(city) { %>
                <tr>
                  <td><%= city.city %></td>
                  <td>
                    <div class="form-check form-switch">
                      <input class="form-check-input" type="checkbox"
                      name="isActive" id="isActive_<%= city._id %>" <%=
                      city.isActive ? 'checked' : '' %>
                      onchange="updateCityStatus('<%= city._id %>',
                      this.checked)" >
                    </div>
                  </td>
                  <td>
                    <a href="/update_c/<%= city._id %>"
                      ><i class="fa-solid fa-pen-to-square icon edit"></i
                    ></a>
                    <a href="/delete_c/<%= city._id %>"
                      ><i class="fa-solid fa-trash icon delete"></i
                    ></a>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
            <div class="card-footer clearfix">
              <ul class="pagination pagination-sm m-0 float-right">
                <% if (currentPage > 1) { %>
                <li class="page-item">
                  <a
                    class="page-link"
                    href="?page=<%= currentPage - 1 %>&limit=4"
                    >&laquo;</a
                  >
                </li>
                <% } else { %>
                <li class="page-item disabled">
                  <a class="page-link" href="#">&laquo;</a>
                </li>
                <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                  <a class="page-link" href="?page=<%= i %>&limit=4"
                    ><%= i %></a
                  >
                </li>
                <% } %> <% if (currentPage < totalPages) { %>
                <li class="page-item">
                  <a
                    class="page-link"
                    href="?page=<%= currentPage + 1 %>&limit=4"
                    >&raquo;</a
                  >
                </li>
                <% } else { %>
                <li class="page-item disabled">
                  <a class="page-link" href="#">&raquo;</a>
                </li>
                <% } %>
              </ul>
            </div>
          </div>
        </div>
        <!-- /.container-fluid -->
        <!-- /.content -->
      </div>
      <!-- Modal -->
      <div
        class="modal fade"
        id="exampleModal"
        tabindex="-1"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-body">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Add City</h1>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <div class="container">
                <form
                  method="POST"
                  action="/city"
                  id="cityForm"
                  enctype="application/x-www-form-urlencoded"
                >
                  <!-- Row for Name and Email fields -->
                  <div class="row">
                    <div class="col-md-12 mb-3">
                      <label for="exampleInputName" class="form-label"
                        >City Name</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="exampleInputName"
                        name="city"
                        placeholder="Enter City name"
                      />
                    </div>
                    <div class="col-md-12 mb-3">
                      <label for="isActive" class="form-label">isActive</label>
                      <div class="form-check form-switch">
                        <input
                          class="form-check-input"
                          type="checkbox"
                          name="isActive"
                          id="isActive"
                        />
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Close
              </button>
              <button id="addCityBtn" class="btn btn-primary" type="button">
                Add
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- /.content-wrapper -->
      <footer class="main-footer">
        <strong
          >Copyright &copy; 2014-2021
          <a href="https://adminlte.io">AdminLTE.io</a>.</strong
        >
        All rights reserved.
        <div class="float-right d-none d-sm-inline-block">
          <b>Version</b> 3.2.0
        </div>
      </footer>

      <!-- Control Sidebar -->
      <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
      </aside>
      <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->

    <script>
      async function submitForm() {
        const form = document.getElementById("cityForm");

        // Simple validation: Ensure city name is not empty
        let cityName = document.getElementById("exampleInputName").value.trim();
        if (!cityName) {
          alert("City name is required.");
          return;
        }

        const isActive = document.getElementById("isActive").checked;

        // Prepare the form data
        const formData = new FormData(form);
        formData.append("isActive", isActive ? "on" : "off"); // Ensure isActive is sent correctly

        const data = Object.fromEntries(formData.entries());

        try {
          // Sending data to the backend
          const response = await fetch("/city", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify(data),
          });

          if (response.ok) {
            // On successful response
            alert("City added successfully!");

            // Hide the modal
            const modal = bootstrap.Modal.getInstance(
              document.getElementById("exampleModal")
            );
            modal.hide();
            form.reset();
          } else {
            const errorText = await response.text();
            alert(`Error: ${errorText}`);
          }
        } catch (error) {
          console.error("Error submitting form:", error);
          alert("An unexpected error occurred.");
        }
      }

      document
        .getElementById("addCityBtn")
        .addEventListener("click", submitForm);

      // ============City Status============
      async function updateCityStatus(cityId, isActive) {
        try {
          const response = await fetch(`/city/${cityId}/status`, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ isActive }),
          });

          if (response.ok) {
            const result = await response.json();
          } else {
            throw new Error("Failed to update city status.");
          }
        } catch (error) {
          console.error("Error updating city status:", error);
          alert("An error occurred while updating city status.");
        }
      }
    </script>

    <!-- Bootstrap JS File -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
